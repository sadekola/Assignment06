<div class="container">
    <div class="row">
        <div class="col-md-12">
            <br>
            <h2>Courses</h2>
            <a href="/courses/add" class="btn btn-success float-right mb-3">Add New Course</a>

            <hr />
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Course Code</th>
                            <th>Course Description</th>
                            <th>Actions</th> <!-- Added column for actions -->
                        </tr>
                    </thead>
                    <tbody>
                        {{#each courses}}
                        <tr>
                            <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
                            <td>{{this.courseDescription}}</td>
                            <td>
                                <!-- Remove button -->
                                <a href="/course/delete/{{this.courseId}}" class="btn btn-danger">Remove</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            {{#unless courses}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
            {{/unless}}
        </div>
    </div>
</div>
