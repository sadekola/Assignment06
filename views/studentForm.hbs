<div class="row">
    <main class="col-md-12">
        <br>
        <h2>{{student.firstName}} {{student.lastName}} - Student: {{student.studentNum}}</h2>
        <hr />
        <form method="post" action="/students/update">
            <div class="form-group">
                <label>Email:</label>
                <input class="form-control" type="email" name="email" value="{{student.email}}" readonly />
            </div>
            <div class="form-group">
                <label>Address (Street):</label>
                <input class="form-control" type="text" name="addressStreet" value="{{student.addressStreet}}" />
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Address (City):</label>
                    <input class="form-control" type="text" name="addressCity" value="{{student.addressCity}}" />
                </div>
                <div class="form-group col-md-6">
                    <label>Address (Province):</label>
                    <input class="form-control" type="text" name="addressProvince" value="{{student.addressProvince}}" />
                </div>
            </div>
            <div class="form-group">
                <label>TA:</label>
                <input class="form-check-input" type="checkbox" name="TA" {{#if student.TA}} checked {{/if}} />
            </div>
            <div class="form-group">
                <label>Status:</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="status" value="Full Time" {{#equal student.status "Full Time"}} checked {{/equal}} />
                    <label class="form-check-label">Full Time</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="status" value="Part Time" {{#equal student.status "Part Time"}} checked {{/equal}} />
                    <label class="form-check-label">Part Time</label>
                </div>
            </div>
            <div class="form-group">
                <label>Course:</label>
                <select class="form-control" name="course">
                    {{#each courses}}
                    <option value="{{this.id}}" {{#equal student.course this.id}} selected {{/equal}}>{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <input type="hidden" name="studentNum" value="{{student.studentNum}}" />
            <input type="submit" class="btn btn-primary float-right" value="Update Student" />
        </form>
    </main>
</div>
